<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/add_address_activity_city_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autofillHints="ChooseCity"
            android:prompt="@string/app_name" />

        <Spinner
            android:id="@+id/add_address_activity_area_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_address_activity_city_spinner"
            android:layout_marginTop="10dp"
            android:autofillHints="ChooseArea"
            android:prompt="@string/app_name" />

        <EditText
            android:id="@+id/add_address_activity_building_number_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_address_activity_area_spinner"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_txt_border"
            android:hint="Building Number"
            android:inputType="text"
            android:lines="1"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp" />

        <EditText
            android:id="@+id/add_address_activity_floor_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_address_activity_building_number_txt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_txt_border"
            android:hint="Floor "
            android:inputType="number"
            android:lines="1"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp" />

        <EditText
            android:id="@+id/add_address_activity_notes_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_address_activity_floor_txt"
            android:layout_margin="10dp"
            android:background="@drawable/edit_txt_border"
            android:hint="notes about location"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/add_address_activity_notes_txt"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_address_activity_use_map_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_border"
                android:text="Use Map"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/add_address_activity_add_address_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn_border"
                android:text="Add Address"
                android:textAlignment="center" />


        </LinearLayout>


    </RelativeLayout>


</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:left="4dp"
                        android:top="4dp"
                        android:right="4dp"
                        android:bottom="4dp"
                        />

                    <gradient android:startColor="#E0FFFF" android:endColor="#008B8B" android:angle="270" />
                    <stroke android:width="10px" android:color="#E0FFFF" />
                    <corners android:radius="25dp" />
                </shape>
            </item>
            <item ><bitmap android:gravity="right|center" android:src="@drawable/drop_down_arrow_80" />
            </item>


        </layer-list>
    </item>
</selector>